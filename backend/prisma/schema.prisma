generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Roles
enum Roles {
  Administrador
  Instructor
}

// Modelo Persona (datos personales)
model Persona {
  cedula        String   @id @unique
  grado         String?  @db.VarChar(255)
  apellidoNombre String  @db.VarChar(255)

  usuario       Usuario?
}

// Modelo Usuario (autenticaci√≥n)
model Usuario {
  id            Int      @id @default(autoincrement())
  password      String   @db.VarChar(255)
  rol           Roles    @default(Instructor)           
  tokenSession  String?  @unique

  personaCedula String   @unique
  persona        Persona @relation(fields: [personaCedula], references: [cedula], onDelete: Cascade)
}
